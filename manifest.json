{
  "name": "Recipe parser",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Extracts recipes from web pages",
  "background": {
    "scripts": [
      "dist/js/background.js",
      "lib/hot-reload.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "options_ui": {
    "page": "dist/options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "dist/js/content_script.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_title": "recipe parser",
    "default_popup": "dist/popup.html"
  }
}
