{
  "name": "recipe-parser",
  "scripts": {
    "build": "webpack --progress --colors --watch",
    "lint": "eslint src/* || true"
  },
  "devDependencies": {
    "babel-core": "^6.7.2",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.6.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-import": "^2.2.0",
    "webpack": "^2.5.1"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "browser": true
    },
    "globals": {
      "chrome": true
    },
    "rules": {
      "eol-last": 0,
      "no-use-before-define": 0,
      "quotes": [
        2,
        "single"
      ]
    }
  }
}
