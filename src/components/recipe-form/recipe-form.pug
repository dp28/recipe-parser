    #parser-popup {
      all: initial;
      font-family: sans-serif;
      top: 10px;
      right: 10px;
      width: 300px;
      height: 500px;
      position: fixed;
      z-index: 1000000000;
      background: white;
      padding: 20px;
      box-shadow: -3px 3px 25px #111;
      border-radius: 5px
    }

    #parser-popup * {
      all: unset;
    }

    #parser-popup h1 {
      display: block;
      font-weight: bold;
      margin-top: 20px;
      margin-bottom: 10px;
      font-size: 1.5em;
    }

    #parser-popup button {
      border: 1px solid #ccc;
      background: #eee;
      cursor: pointer;
      padding: 5px
    }

    #parser-popup button:hover {
      background: #ccc;
    }

